<%#= render 'layouts/messages' %>

<% if @stock %>
  <div class="card card-header results-block mt-4">
    <strong>Symbol: </strong> <%= @stock.ticker %>
    <strong>Company: </strong> <%= @stock.name %>
    <strong>Price: </strong> <%= @stock.last_price %>
    <% if current_user.can_track_stock?(@stock.ticker) %>
      <%= button_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-success", method: :post %>
    <% else %>
    <span class="badge bg-secondary badge-tracked">
      You are already tracking
      <% if !current_user.under_stock_limit? %>
        10 stocks
      <% else %>
        this stock
      <% end %>
    </span>
    <% end %>
  </div>
<% end %>