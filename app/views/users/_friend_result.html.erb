<% if @friends %>
  <div class="card card-header results-block mt-4">
    <table class="col-md-12">
      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><strong>Name: </strong> <%= friend.full_name %></td>
          <td><strong>Email: </strong> <%= friend.email %></td>
          <td><strong>Actions: </strong> <%= link_to 'View Profile', user_path(friend), class: "btn btn-success btn-sm" %>
            <% if current_user.not_friends_with?(friend.id) %>
              <%= button_to 'Follow', friendships_path(friend: friend), class: "btn btn-success btn-sm", form: {style: 'display:inline-block;'}, method: :post %>
            <% else %>
            <span class="badge bg-secondary">
              You are friends
            </span>
              </td>
            <% end %>
            </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>